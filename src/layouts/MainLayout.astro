---
import BGLoader from "../components/BGLoader";
import BGSkeleton from "../components/BGSkeleton.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
---

<body>
  <noscript>
    <style>
      .noscript-banner {
        padding: 1rem;
        background: #f59e0b;
        color: #000;
        text-align: center;
        font-weight: bold;
      }
    </style>
    <div class="noscript-banner">
      For the best experience, please enable JavaScript. This portfolio site
      works without JavaScript but some interactive features may be limited.
    </div>
  </noscript>
  <!-- Lightweight skeleton shows immediately -->
  <BGSkeleton />
  <!-- Heavy BG component loads after page is interactive -->
  <BGLoader client:idle />
  <Header />
  <slot />
  <Footer />
</body>
