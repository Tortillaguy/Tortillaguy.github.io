---
import BaseHead from "../components/BaseHead.astro";
import { SITE_DESCRIPTION } from "../config";
import MainLayout from "../layouts/MainLayout.astro";
import { ViewTransitions } from "astro:transitions";
const { frontmatter } = Astro.props;
const { title, author } = frontmatter;
---

<html lang="en" data-theme="cmyk">
  <head>
    <BaseHead
      title={"Adrian Cacho â€“ Creative Technologist"}
      description={SITE_DESCRIPTION}
      image="assets/coffee.jpeg"
    />
    <ViewTransitions />
  </head>
  <MainLayout>
    <article
      id="blog-post"
      class="prose prose-sm sm:prose-base lg:prose-lg xl:prose-xl
             prose-invert prose-p:text-white prose-li:text-white
             prose-headings:text-blog-heading
             prose-a:text-accent-cyan prose-a:no-underline hover:prose-a:underline
             prose-strong:text-primary-light prose-code:text-accent-yellow
             prose-pre:bg-dark prose-pre:shadow-dark
             prose-img:rounded-lg prose-img:shadow-dark
             md:mx-auto md:my-[1.5rem] m-auto my-10 max-w-4xl
             rounded-xl panel p-6 sm:p-10 mx-5"
    >
      <slot />
    </article>
  </MainLayout>
</html>
