---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import "../styles/global.css";
import Scripts from "./Scripts.astro";

export interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image = "/placeholder-social.jpg" } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/x-icon" href="/favicon.ico?v=1.1" />
<meta name="generator" content={Astro.generator} />

<!-- Preconnect to external font resources -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

<!-- Defer Material Icons - not critical for initial render -->
<link
  rel="preload"
  as="style"
  onload="this.onload=null;this.rel='stylesheet'"
  href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0&display=swap"
/>
<noscript>
  <link
    rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0&display=swap"
  />
</noscript>

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="keywords" content="Adrian Cacho, Full-Stack Engineer, React Developer, TypeScript, Three.js, WebGL, VJ, Visual Artist, Creative Technologist, blocks.glass, Resolume, Disguise, TouchDesigner, Live Production, Web3, Blockchain, AR, VR" />
<meta name="author" content="Adrian Cacho" />
<link rel="canonical" href={Astro.url} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />

<!-- Structured Data (JSON-LD) for better AI/crawler understanding -->
<script type="application/ld+json" is:inline>
{
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Adrian Cacho",
  "alternateName": "Cacho",
  "url": "https://cacho.dev",
  "image": "https://cacho.dev/assets/gig_selfie.webp",
  "sameAs": [
    "https://linkedin.com/in/agcacho",
    "https://instagram.com/cacho.vibez"
  ],
  "jobTitle": "Senior Full-Stack Engineer",
  "worksFor": {
    "@type": "Organization",
    "name": "Napster Inc."
  },
  "description": "Creative technologist, visual artist, and full-stack developer with 7+ years of experience building scalable web applications, immersive experiences, and 3D graphics. VJ for major events including Proper NYE hosted by CRSSD.",
  "knowsAbout": [
    "React", "TypeScript", "Next.js", "Three.js", "WebGL", "Node.js", "PostgreSQL", "AWS",
    "VJ", "Resolume", "Disguise", "TouchDesigner", "Notch", "Blender", "Unity", "Unreal Engine",
    "Web3", "Blockchain", "AR", "VR", "Live Events", "Visual Production"
  ],
  "alumni": [
    {
      "@type": "EducationalOrganization",
      "name": "University of California, Davis"
    },
    {
      "@type": "EducationalOrganization",
      "name": "Polkadot Blockchain Academy"
    }
  ]
}
</script>

<Scripts />
