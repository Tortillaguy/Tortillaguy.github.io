---
import type { Project } from "../types";
import Tag from "./Tag.astro";

const { project } = Astro.props;
const { filename, name, role, tags, link, imageStyle } = project as Project;
---

<style>
  .card:hover {
    box-shadow: 1px 1px 9px 1px #1aaad0;
  }
</style>
<a
  href={link}
  target="_blank"
  class="display:block card group hover:hover-shadow transition-transform hover:-translate-y-3 duration-300 ease-in-out min-w-[16rem] h-min bg-base-100 shadow-xl not-prose flex-grow border-transparent border-solid border-2 border-gradient cursor-pointer"
>
  <figure class="rounded-t-[12px]">
    <img
      style={{
        aspectRatio: "4/3",
        objectPosition: "50% 20%",
        objectFit: "cover",
        ...imageStyle,
      }}
      src={`/assets/${filename}`}
      alt={filename}
    />
  </figure>
  <div class="card-body p-4">
    <h2
      class="card-title group-hover:text-[#82ddf6] inline-block underline underline-offset-1 text-[#f5f5f5]"
    >
      {name}{" "}
      <span class="material-symbols-outlined underline underline-offset">
        north_east
      </span>
    </h2>

    <p class="text-[#ffbdff]">{role}</p>
    <div class="card-actions">
      <div class="flex flex-wrap gap-[10px] prose justify-center gap-y-0">
        {tags?.map((tag: string) => <Tag title={tag} />)}
      </div>
    </div>
  </div>
</a>
