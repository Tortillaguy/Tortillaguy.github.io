---
import { SITE_TITLE } from "../config";
import nav from "../data/nav";
---

<style>
  .side-drawer {
    position: fixed;
    margin-top: 20px;
    z-index: 1;
    right: 0px;
    transform: translateX(100%);

    transition: transform 0.25s ease-in-out;
  }

  .drawer-toggle:checked ~ .side-drawer {
    transform: translateX(-10px);
  }

  ul {
    white-space: nowrap;
    @apply px-4 py-2;
  }

  li a {
    @apply text-primary-light text-shadow transition-transform hover:text-purple-400 hover:scale-110;
    cursor: pointer;
  }
</style>
<input id="drawer" type="checkbox" class="drawer-toggle !fixed" />

<header class="top-0 z-10 max-w-6xl m-auto">
  <div
    class="flex items-center justify-between px-4 md:pr-0 md:pl-5 min-h-16 pt-5"
  >
    <h1
      class="text-3xl prose text-primary-light font-oxygen text-shadow hover:cursor-default"
    >
      {SITE_TITLE}
    </h1>
    <label
      for="drawer"
      class="text-primary-light btn btn-square btn-ghost hover:bg-transparent md:hidden"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        class="inline-block w-8 h-8 stroke-current svg-shadow"
        ><path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </label>
    <nav class="hidden md:block">
      <ul class="flex items-center gap-4 transition-transform">
        <!-- Navbar menu content here -->
        <li><a href="/" class="home">Home</a></li>
        <li><a href="/#projects" class="projects">Projects</a></li>
        <li><a href="/#productions" class="productions">Productions</a></li>
        <li><a href="/#art" class="art">Art</a></li>
        <li><a href="/#about" class="about">About</a></li>
        <li><a href="/#skills" class="skills">Skills</a></li>
        <li><a href="/#contact" class="contact">Contact</a></li>
      </ul>
    </nav>
  </div>
</header>

<div class="side-drawer panel">
  <nav class="relative py-1 rounded-sm flex-nowrap">
    <ul class="flex flex-col gap-5 text-xs">
      {
        nav.map((key) => (
          <li>
            <a
              onclick="document.getElementById('drawer').checked = false;"
              href={`/#${key === "home" ? "" : key}`}
              class={`${key} text-xl`}
            >
              {key.substring(0, 1).toUpperCase() + key.substring(1)}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</div>
