---
//@ts-ignore
// import Fade from "react-reveal/Fade";
---

<div
  class="w-full items-center justify-center flex gap-8 my-8 flex-col md:flex-row md:my-20"
>
  <div class="animate-in fade-in fill-mode-both delay-150 duration-1000">
    <div class="avatar">
      <style>
        .avatar-border {
          background: linear-gradient(white, white) padding-box,
            linear-gradient(135deg, #ebf9ab, #51c9ff, #e4bef5) border-box;
          border-radius: 50em;
          border: 4px solid transparent;
        }
      </style>
      <div
        class="w-32 md:w-40 rounded-full brightness-[1.1] saturate-[1.1] avatar-border"
      >
        <img src="/pfp.jpeg" />
      </div>
    </div>
  </div>

  <div class="prose flex flex-col gap-2 [&>*]:text-white [&>*]:m-0 text-shadow">
    <h3 class="slide-text animDuration-[1000]">Hey there!👋</h3>
    <h2 class="slide-text animDuration-[1000] animDelay-[500]">I'm Adrian</h2>
    <h4 class="slide-text animDuration-[1000] animDelay-[1450]">
      (But you can call me Cacho)
    </h4>
    <div
      class="flex flex-col [&>*]:text-white text-shadow md:gap-[2ch] [&>*]:m-0 md:flex-row md"
    >
      <h3 class="slide-text animDuration-[1000] animDelay-[2750]">
        Visual Artist 👾
      </h3>
      <h3 class="slide-text animDuration-[1000] animDelay-[3250]">
        Designer 🧩
      </h3>
      <h3 class="slide-text animDuration-[1000] animDelay-[3750]">
        Developer 🛠️
      </h3>
    </div>
  </div>
</div>
